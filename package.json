{
  "name": "basic-environment-javascript",
  "version": "0.2.0",
  "description": "Basic Environment JavaScript (Babel, Eslint, Jest and Watch)",
  "main": "dist/common.js",
  "author": "Eduardo Paix√£o (@duduindo)",
  "license": "MIT",
  "scripts": {
    "build": "gulp js",
    "lint": "eslint src/js gulpfile.js --cache --ignore-path .gitignore; exit 0;",
    "server": "gulp server",
    "test": "jest --config jest.config.json",
    "test:coverage": "jest --config jest.config.json --coverage",
    "test:watch": "jest --config jest.config.json --watch",
    "watch": "gulp watch"
  },
  "keywords": [
    "environment",
    "javascript",
    "basic"
  ],
  "devDependencies": {
    "babel-cli": "*",
    "babel-eslint": "*",
    "babel-jest": "*",
    "babel-preset-env": "*",
    "babelify": "*",
    "browser-sync": "*",
    "browserify": "*",
    "eslint": "*",
    "gulp": "*",
    "gulp-sourcemaps": "*",
    "gulp-stylus": "*",
    "gulp-uglify": "*",
    "html-loader-jest": "*",
    "jest": "*",
    "vinyl-buffer": "*",
    "vinyl-source-stream": "*"
  }
}
